<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp" >

        <TextView
            android:id="@+id/tv_sharemyocation_textview1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="地点："
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sharemylocation_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_mark5"
            android:gravity="center_vertical"
            android:text="福州市五一广场"
            android:textColor="@color/red"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp" >

        <TextView
            android:id="@+id/tv_sharemylocation_textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="类别："
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_sharemylocation_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_sharemylocation_shareinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_weight="1.42"
        android:background="@color/white"
        android:gravity="top"
        android:hint="分享我的足迹信息...." >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_sharemylocation_publish"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/main_button"
        android:gravity="center"
        android:text="发   布"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>