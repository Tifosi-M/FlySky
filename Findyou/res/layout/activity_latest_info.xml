<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_edit_card_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF424242" >

     <ImageButton
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF45E5E"
                android:src="@drawable/hand_input" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/btn_show"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_weight="5"
                android:gravity="center"
                android:text="最新动态"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_refesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="#FFF45E5E"
                android:src="@drawable/refesh_test" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lastet_news_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
             android:divider="@null">
        </ListView>

    </LinearLayout>

</FrameLayout>