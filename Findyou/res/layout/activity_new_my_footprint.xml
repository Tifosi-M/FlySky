<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- com.baidu.mapapi.map.MapView -->
    <com.findyou.ui.main.MyLocationMapView android:id="@+id/bmapsView"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:clickable="true" />
    
     <Button
         android:id="@+id/location_button"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dip"
         android:background="@drawable/selector_location_button"
         />

    	<Button
    	    android:id="@+id/reset"
    	    android:layout_width="40dp"
    	    android:layout_height="40dp"
    	    android:layout_alignRight="@+id/location_button"
    	    android:layout_below="@+id/clear"
    	    android:layout_marginTop="21dp"
    	    android:background="@drawable/selector_find_button"
    	     />

    	<Button
    	    android:id="@+id/clear"
    	    android:layout_width="40dp"
    	    android:layout_height="40dp"
    	    android:layout_alignLeft="@+id/location_button"
    	    android:layout_below="@+id/location_button"
    	    android:layout_marginTop="22dp"
    	    android:background="@drawable/selector_clear_button" />

</RelativeLayout>