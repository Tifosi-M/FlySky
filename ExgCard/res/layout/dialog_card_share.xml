<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="一键分享"
                android:textColor="@color/red"
                android:textSize="16sp" />
             <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="（若对方已安装该软件，可直接发送）"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/redline" />

            <TextView
                android:id="@+id/tv_share_by_soft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:drawableBottom="@drawable/ic_list_dividing_line"
                android:drawableLeft="@drawable/ico_route_2"
                android:background="@drawable/dialog_button_bg"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:paddingTop="20sp"
                android:text="发送名片"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_share_by_frontia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:drawableBottom="@drawable/ic_list_dividing_line"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:paddingTop="20sp"
                android:text="平台分享"
                android:background="@drawable/dialog_button_bg"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_share_create_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:drawableBottom="@drawable/ic_list_dividing_line"
                android:drawableLeft="@drawable/code"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:paddingTop="20sp"
                android:text="生成二维码"
                android:background="@drawable/dialog_button_bg"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:drawableBottom="@drawable/ic_list_dividing_line"
                android:drawableLeft="@drawable/bluetooth"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:paddingTop="20sp"
                android:text="蓝牙分享"
                android:background="@drawable/dialog_button_bg"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_share_by_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:drawableLeft="@drawable/messager"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:paddingTop="20sp"
                android:text="短信分享"
                android:background="@drawable/dialog_button_bg"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dialogCardShareCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_default"
                android:text="取消"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>